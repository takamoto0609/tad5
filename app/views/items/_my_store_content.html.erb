<div class="content">
  <div class="content_header_daj">
    <b>提供中のサービス一覧</b>
  </div>
  <div class="content_body_M">
    <table border="1">
      <tr>
        <th style="text-align: center;">リンク</th>
        <th style="text-align: center;">状態</th>
        <th style="text-align: center;">洗濯重量</th>
        <th style="text-align: center;">ポイント</th>
        <th>受付場所</th>
      </tr>
      <% @items.each do |item| %>
      <tr>
        <td style="text-align: center;"><%= link_to '詳細',item_path(item.id), style:"color: white;" %></td>
        <td style="text-align: center;"><%= item.status.name %></td>
        <td style="text-align: center;"><%= item.wash_power.name %></td>
        <td style="text-align: center;"><%= item.point %>P</td>
        <td><%= item.address %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>